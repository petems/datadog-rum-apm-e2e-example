{
  "name": "datablog",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "screenshot": "node scripts/screenshot.js",
    "seed": "node scripts/seed-data.js",
    "prepare": "husky install || true"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "bunyan": "^1.8.15",
    "dd-trace": "^5.28.0",
    "debug": "~2.6.9",
    "ejs": "^3.1.10",
    "escape-html": "^1.0.3",
    "express": "^4.21.1",
    "express-rate-limit": "^8.0.1",
    "hot-shots": "^7.6.0",
    "http-errors": "~2.0.0",
    "mongoose": "^5.9.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
