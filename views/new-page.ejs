<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- DATADOG RUM -->
    <script src="https://www.datadoghq-browser-agent.com/datadog-rum-us.js" type="text/javascript" integrity="sha384-IYjwA4SyYSuGWv/BUWgCzXkRRJ+i9YhzDBbJGKUe+UKfzTEs8w/hgfU9ubdqzux5" crossorigin="anonymous"></script>
    <script nonce="<%= cspNonce %>">
        window.DD_RUM && window.DD_RUM.init({
            clientToken: '<%= rum.clientToken %>',
            applicationId: '<%= rum.applicationId %>',
            env: '<%= rum.env %>',
            service: '<%= rum.service %>',
            version: '<%= rum.version %>',
            allowedTracingOrigins: [/http:\/\/localhost:3000/],
            trackInteractions: true
        });
    </script>

    <!-- Bootstrap 5 CSS -->
    <link href="/vendor/bootstrap.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <!-- Removed Google Fonts to satisfy CSP and reduce external domains -->
    <!-- Custom CSS -->
    <link href="/stylesheets/style.css" type="text/css" rel="stylesheet">

    <title>Create New Page - Datablog</title>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm mb-4">
        <div class="container">
            <a class="navbar-brand text-gradient" href="/">ğŸ“ Datablog</a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/">ğŸ  Home</a>
            </div>
        </div>
    </nav>

    <div class="container">
        <!-- Page Header -->
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="display-5">âœ¨ Create New Page</h1>
                    <p class="text-muted mb-0">Started: <%= currentDate %></p>
                </div>
                <div class="col-md-4 text-md-end">
                    <a href="/" class="btn btn-outline-secondary">
                        â† Cancel & Go Home
                    </a>
                </div>
            </div>
        </div>

        <!-- Form Section -->
        <div class="page-content">
            <form id="pageForm" novalidate>
                <div class="row">
                    <div class="col-lg-8">
                        <!-- Title Input -->
                        <div class="mb-4">
                            <label for="title" class="form-label">ğŸ“ Page Title</label>
                            <input 
                                type="text" 
                                class="form-control form-control-lg" 
                                id="title" 
                                placeholder="Enter an engaging title for your page..."
                                required
                            >
                            <div class="invalid-feedback">
                                Please provide a title for your page.
                            </div>
                        </div>

                        <!-- Body Textarea -->
                        <div class="mb-4">
                            <label for="body" class="form-label">ğŸ“„ Page Content</label>
                            <textarea 
                                class="form-control" 
                                id="body" 
                                rows="12"
                                placeholder="Write your page content here... You can use line breaks and formatting."
                                required
                            ></textarea>
                            <div class="invalid-feedback">
                                Please add some content to your page.
                            </div>
                            <div class="form-text">
                                ğŸ’¡ Tip: Use line breaks to format your content nicely!
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="action-buttons">
                            <button type="submit" class="btn btn-primary btn-lg" id="submitBtn">
                                <span class="spinner-border spinner-border-sm me-2 d-none" role="status"></span>
                                ğŸš€ Create Page
                            </button>
                            <button type="button" class="btn btn-outline-secondary btn-lg" id="previewBtn">
                                ğŸ‘ï¸ Preview
                            </button>
                            <a href="/" class="btn btn-outline-danger btn-lg">
                                âŒ Cancel
                            </a>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <!-- Preview Section -->
                        <div class="card d-none" id="previewCard">
                            <div class="card-header">
                                <h6 class="mb-0">ğŸ‘ï¸ Preview</h6>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title" id="previewTitle">Your title will appear here</h5>
                                <div class="page-body-content" id="previewBody">
                                    Your content will appear here...
                                </div>
                            </div>
                        </div>

                        <!-- Help Card -->
                        <div class="card mt-4">
                            <div class="card-header">
                                <h6 class="mb-0">ğŸ’¡ Tips</h6>
                            </div>
                            <div class="card-body">
                                <ul class="list-unstyled mb-0">
                                    <li>ğŸ“ Write a descriptive title</li>
                                    <li>ğŸ“„ Add meaningful content</li>
                                    <li>ğŸ”„ Use the preview to see how it looks</li>
                                    <li>âœ¨ Have fun creating!</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- jQuery -->
    <script src="/vendor/jquery-3.5.1.min.js"></script>
    <!-- Bootstrap 5 JS -->
    <script src="/vendor/bootstrap.bundle.min.js"></script>

    <!-- Page Scripts -->
    <script nonce="<%= cspNonce %>">
        // Form validation and submission
        $('#pageForm').on('submit', function(e) {
            e.preventDefault();
            
            const form = this;
            const title = $('#title').val().trim();
            const body = $('#body').val().trim();
            const submitBtn = $('#submitBtn');
            const spinner = submitBtn.find('.spinner-border');
            
            // Clear previous validation
            $(form).removeClass('was-validated');
            
            // Validate
            if (!title || !body) {
                $(form).addClass('was-validated');
                return;
            }
            
            // Show loading state
            submitBtn.prop('disabled', true);
            spinner.removeClass('d-none');
            submitBtn.html('<span class="spinner-border spinner-border-sm me-2" role="status"></span>Creating...');
            
            $.ajax({ 
                url: '/api/page',
                dataType: 'json',
                data: {
                    "title": title,
                    "body": body
                },
                type: 'POST',
                success: function(result) {   
                    console.log("Successful post");
                    console.log("Resulting Page: " + JSON.stringify(result));
                    const page = JSON.parse(JSON.stringify(result)); 
                    console.log("ID: " + page.id);
                    
                    // Show success message
                    $('body').prepend(`
                        <div class="alert alert-success alert-dismissible fade show pos-fixed-top-right">
                            <strong>Success!</strong> Page created successfully!
                        </div>
                    `);
                    
                    // Redirect to the new page
                    setTimeout(() => window.location = '/page/' + page.id, 1000);
                },
                error: function(result) {
                    console.log("Error: " + result);
                    
                    // Reset button
                    submitBtn.prop('disabled', false);
                    spinner.addClass('d-none');
                    submitBtn.html('ğŸš€ Create Page');
                    
                    // Show error
                    $('body').prepend(`
                        <div class="alert alert-danger alert-dismissible fade show pos-fixed-top-right">
                            <strong>Error!</strong> Failed to create page. Please try again.
                        </div>
                    `);
                }
            });
        });

        // Preview functionality
        $('#previewBtn').click(function() {
            const title = $('#title').val() || 'Your title will appear here';
            const body = $('#body').val() || 'Your content will appear here...';
            
            $('#previewTitle').text(title);
            $('#previewBody').text(body);
            $('#previewCard').slideDown();
        });

        // Real-time preview update
        $('#title, #body').on('input', function() {
            if ($('#previewCard').is(':visible')) {
                $('#previewBtn').click();
            }
        });

        // Auto-dismiss alerts
        $(document).on('click', '.alert', function() {
            $(this).alert('close');
        });
        
        setTimeout(() => $('.alert').alert('close'), 3000);
    </script>
</body>
</html>
