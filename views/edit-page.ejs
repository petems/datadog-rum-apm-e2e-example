<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- DATADOG RUM -->
    <script src="https://www.datadoghq-browser-agent.com/datadog-rum-us.js" type="text/javascript"></script>
    <script nonce="<%= cspNonce %>">
        window.DD_RUM && window.DD_RUM.init({
            clientToken: '<%= rum.clientToken %>',
            applicationId: '<%= rum.applicationId %>',
            env: '<%= rum.env %>',
            service: '<%= rum.service %>',
            version: '<%= rum.version %>',
            allowedTracingOrigins: [/http:\/\/localhost:3000/],
            trackInteractions: true
        });
    </script>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/stylesheets/style.css" type="text/css" rel="stylesheet">

    <title>Edit: <%= title %> - Datablog</title>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm mb-4">
        <div class="container">
            <a class="navbar-brand text-gradient" href="/">üìù Datablog</a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/">üè† Home</a>
                <a class="nav-link" href="/page/<%= id %>">üëÅÔ∏è View Page</a>
            </div>
        </div>
    </nav>

    <div class="container">
        <!-- Page Header -->
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="d-flex align-items-center mb-2">
                        <span class="badge bg-warning text-dark me-3 fs-6">Editing Page #<span id="page"><%= id %></span></span>
                        <span class="text-muted">Created: <%= niceDate %></span>
                    </div>
                    <h1 class="display-5">‚úèÔ∏è Edit Page</h1>
                </div>
                <div class="col-md-4 text-md-end">
                    <a href="/page/<%= id %>" class="btn btn-outline-secondary">
                        ‚Üê Cancel & View Page
                    </a>
                </div>
            </div>
        </div>

        <!-- Form Section -->
        <div class="page-content">
            <form id="pageForm" novalidate>
                <div class="row">
                    <div class="col-lg-8">
                        <!-- Title Input -->
                        <div class="mb-4">
                            <label for="title" class="form-label">üìù Page Title</label>
                            <input 
                                type="text" 
                                class="form-control form-control-lg" 
                                id="title" 
                                value="<%= title %>"
                                placeholder="Enter an engaging title for your page..."
                                required
                            >
                            <div class="invalid-feedback">
                                Please provide a title for your page.
                            </div>
                        </div>

                        <!-- Body Textarea -->
                        <div class="mb-4">
                            <label for="body" class="form-label">üìÑ Page Content</label>
                            <textarea 
                                class="form-control" 
                                id="body" 
                                rows="12"
                                placeholder="Write your page content here... You can use line breaks and formatting."
                                required
                            ><%= body %></textarea>
                            <div class="invalid-feedback">
                                Please add some content to your page.
                            </div>
                            <div class="form-text">
                                üí° Tip: Use line breaks to format your content nicely!
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="action-buttons">
                            <button type="submit" class="btn btn-success btn-lg" id="submitBtn">
                                <span class="spinner-border spinner-border-sm me-2 d-none" role="status"></span>
                                üíæ Save Changes
                            </button>
                            <button type="button" class="btn btn-outline-secondary btn-lg" id="previewBtn">
                                üëÅÔ∏è Preview
                            </button>
                            <a href="/page/<%= id %>" class="btn btn-outline-danger btn-lg">
                                ‚ùå Cancel
                            </a>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <!-- Preview Section -->
                        <div class="card d-none" id="previewCard">
                            <div class="card-header">
                                <h6 class="mb-0">üëÅÔ∏è Preview</h6>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title" id="previewTitle"><%= title %></h5>
                                <div class="page-body-content" id="previewBody">
                                    <%= body %>
                                </div>
                            </div>
                        </div>

                        <!-- Page Info Card -->
                        <div class="card mt-4">
                            <div class="card-header">
                                <h6 class="mb-0">üìã Page Info</h6>
                            </div>
                            <div class="card-body">
                                <ul class="list-unstyled mb-0">
                                    <li><strong>ID:</strong> #<%= id %></li>
                                    <li><strong>Created:</strong> <%= niceDate %></li>
                                    <li><strong>Status:</strong> <span class="badge bg-info">Editing</span></li>
                                </ul>
                                <hr>
                                <div class="d-grid gap-2">
                                    <a href="/page/<%= id %>" class="btn btn-sm btn-outline-primary">View Live Page</a>
                                    <a href="/" class="btn btn-sm btn-outline-secondary">Back to Home</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Page Scripts -->
    <script nonce="<%= cspNonce %>">
        // Form validation and submission
        $('#pageForm').on('submit', function(e) {
            e.preventDefault();
            
            const form = this;
            const title = $('#title').val().trim();
            const body = $('#body').val().trim();
            const submitBtn = $('#submitBtn');
            const spinner = submitBtn.find('.spinner-border');
            
            // Clear previous validation
            $(form).removeClass('was-validated');
            
            // Validate
            if (!title || !body) {
                $(form).addClass('was-validated');
                return;
            }
            
            // Show loading state
            submitBtn.prop('disabled', true);
            spinner.removeClass('d-none');
            submitBtn.html('<span class="spinner-border spinner-border-sm me-2" role="status"></span>Saving...');
            
            $.ajax({ 
                url: '/api/page/' + $('#page').text(),
                dataType: 'json',
                data: {
                    "id": '<%= id %>',
                    "title": title,
                    "body": body
                },
                type: 'PUT',
                success: function(result) {   
                    console.log("Successful update");
                    console.log("Resulting Page: " + JSON.stringify(result));
                    const page = JSON.parse(JSON.stringify(result)); 
                    console.log("ID: " + page.id);
                    
                    // Show success message
                    $('body').prepend(`
                        <div class="alert alert-success alert-dismissible fade show pos-fixed-top-right">
                            <strong>Success!</strong> Page updated successfully!
                        </div>
                    `);
                    
                    // Redirect to the updated page
                    setTimeout(() => window.location = '/page/' + page.id, 1000);
                },
                error: function(result) {
                    console.log("Error: " + result);
                    
                    // Reset button
                    submitBtn.prop('disabled', false);
                    spinner.addClass('d-none');
                    submitBtn.html('üíæ Save Changes');
                    
                    // Show error
                    $('body').prepend(`
                        <div class="alert alert-danger alert-dismissible fade show pos-fixed-top-right">
                            <strong>Error!</strong> Failed to update page. Please try again.
                        </div>
                    `);
                }
            });
        });

        // Preview functionality
        $('#previewBtn').click(function() {
            const title = $('#title').val() || '<%= title %>';
            const body = $('#body').val() || '<%= body %>';
            
            $('#previewTitle').text(title);
            $('#previewBody').text(body);
            $('#previewCard').slideDown();
        });

        // Real-time preview update
        $('#title, #body').on('input', function() {
            if ($('#previewCard').is(':visible')) {
                $('#previewBtn').click();
            }
        });

        // Auto-dismiss alerts
        $(document).on('click', '.alert', function() {
            $(this).alert('close');
        });
        
        setTimeout(() => $('.alert').alert('close'), 3000);
    </script>
</body>
</html>
